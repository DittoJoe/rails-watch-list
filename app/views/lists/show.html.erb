<%= render "navbar" %>
<h2><%= @list.name %></h2>
<% bookmarks = @list.bookmarks %>
<ul>
  <% bookmarks.each do |bm| %>
    <li><%= bm.movie.title %> - <%= bm.comment %> - <%= link_to '(delete)', bookmark_path(bm), method: :delete %></li>
  <% end %>
</ul>
<p><%= link_to 'Edit list' , edit_list_path(@list) %></p>
<p><%= link_to 'Add movie' , new_list_bookmark_path(@list) %></p>
<p><%= link_to 'Go back' , lists_path %></p>


